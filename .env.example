# WhatsApp Business API Configuration
# Get these from Meta Business Suite > WhatsApp > API Setup
# https://developers.facebook.com/docs/whatsapp/business-management-api/get-started

# Your WhatsApp Business Phone Number ID (found in API Setup)
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here

# Access token for WhatsApp Business API (generate in Meta App Dashboard)
WHATSAPP_ACCESS_TOKEN=your_access_token_here

# Webhook verification token (you choose this - used to verify webhook during setup)
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_custom_verify_token_here

# App Secret from Meta App Dashboard (used for webhook signature validation)
WHATSAPP_APP_SECRET=your_app_secret_here

# Anthropic API Configuration
# Get from: https://console.anthropic.com/settings/keys
# Must start with 'sk-'
ANTHROPIC_API_KEY=sk-your-anthropic-api-key-here

# Database Configuration
# PostgreSQL connection string
# Local: postgresql://user:password@localhost:5432/family_calendar
# Managed: Get from your provider (Railway, Render, Supabase, etc.)
DATABASE_URL=postgresql://user:password@localhost:5432/family_calendar

# Redis Configuration
# Required by BullMQ for async job processing
# Local: docker run -d -p 6379:6379 redis
# Managed: Get from your Redis provider (Upstash, Redis Cloud, etc.)
REDIS_URL=redis://localhost:6379

# Application Configuration
# Port for the Fastify server (default: 3000)
PORT=3000

# Environment (development, production, test)
NODE_ENV=development

# Log level (fatal, error, warn, info, debug, trace)
LOG_LEVEL=info
